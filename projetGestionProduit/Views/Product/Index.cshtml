@model IEnumerable<projetGestionProduit.Models.Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Liste des Produits</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">Ajouter Un Nouveau Produit</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ImageFileName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
                <td>
                   @item.CreatedAt
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageFileName))
                    {
                        <img src="~/products/@item.ImageFileName" alt="@item.ProductName" style="max-width: 100px; max-height: 100px;" />
                    }
                    else
                    {
                        <span>No image available</span>
                    }
                </td>


            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.ProductId">Edit</a> |
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.ProductId">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
