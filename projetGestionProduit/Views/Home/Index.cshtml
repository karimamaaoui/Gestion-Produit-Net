@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<projetGestionProduit.Models.Product>

<div class="text-center">
    <h1 class="display-4">Welcome to Our Store</h1>
   
    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item">
                <img src="~/products/3.jpg" class="d-block w-100" alt="...">
                <p class="lead">Thank you for visiting our store. We offer a wide range of products to meet your needs.</p>

            </div>
            <div class="carousel-item active">
                <img src="~/products/banner-img.png" class="d-block w-100" alt="...">
                <p class="lead">Thank you for visiting our store. We offer a wide range of products to meet your needs.</p>

            </div>
           
            <div class="carousel-item">
                <img src="~/products/2.jpg" class="d-block w-100" alt="...">
                <p class="lead">Thank you for visiting our store. We offer a wide range of products to meet your needs.</p>

            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <section class="shop_section layout_padding">
        <div class="container">
            <div class="heading_container heading_center">
                <h2>
                    Products
                </h2>
            </div>
            <div class="row">
              @foreach (var product in Model)
                    {  <div class="col-sm-6 col-md-4 col-lg-3">

                        <div class="box">
                            <div class="d-flex justify-content-between ">
                                <div>
                                    <button class="btn btn-details">
                                    <a asp-action="Details" asp-route-id="@product.ProductId" >Details</a>
                                    </button>

                                </div>
                                <div>
                                    <button class="btn btn-cart">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16" width="20" height="20">
                                            <path d="M0 0h1l1.286 7.718L3.5 10.5h8.143l1.214-2.782L15 1H3zm3 11a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm9 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                                        </svg>
                                        +
                                    </button>
                                </div>
                            </div>

                            <a href="">
                                <div class="img-box">
                                    <img src="~/products/@product.ImageFileName" alt="@product.ProductName">
                                </div>
                                <div class="detail-box">
                                    <h6>@product.ProductName</h6>
                                    <h6>Price: <span>@product.Price</span></h6>
                                </div>
                            </a>
                        </div>
           
                    </div>
                }
            </div>
            <div class="btn-box">
                <a href="">
                    View All Products
                </a>
            </div>
        </div>
    </section>

    <div class="footer_section layout_padding">
        <div class="container">
            <div class="footer_logo"><img src="~/products/footer-logo.png"></div>
            <div class="contact_section_2">
                <div class="row">
                    <div class="col-sm-4">
                        <h3 class="address_text">Contact Us</h3>
                        <div class="address_bt">
                            <ul>
                                <li>
                                    <a href="#">
                                        <i class="fa fa-map-marker" aria-hidden="true"></i><span class="padding_left10">Address : Loram Ipusm</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="fa fa-phone" aria-hidden="true"></i><span class="padding_left10">Call : +01 1234567890</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="fa fa-envelope" aria-hidden="true"></i><span class="padding_left10">Email : demo@gmail.com</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="footer_logo_1"><img src="~/products/footer-logo.png"></div>
                        <p class="dummy_text">commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non</p>
                    </div>
                    <div class="col-sm-4">
                        <div class="main">
                            <h3 class="address_text">Best Products</h3>
                            <p class="ipsum_text">dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non</p>
                        </div>
                    </div>
                </div>
            </div>
          
        </div>
    </div>

</div>
